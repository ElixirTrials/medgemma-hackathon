# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=clinical_trials

# Services
DATABASE_URL=postgresql://postgres:postgres@db:5432/clinical_trials
API_PORT=8000
CORS_ORIGINS=http://localhost:3000

# UI
UI_PORT=3000
VITE_API_BASE_URL=http://localhost:8000

# Google Cloud
GCS_BUCKET_NAME=  # Required for protocol upload
GOOGLE_APPLICATION_CREDENTIALS=  # Path to GCS service account key JSON (host machine)

# GCP Application Default Credentials for Docker (MedGemma/Vertex AI)
# Run: gcloud auth application-default login
# The ADC file at ~/.config/gcloud/application_default_credentials.json is volume-mounted into Docker.
# Override with GOOGLE_ADC_PATH if your ADC file is elsewhere.
GOOGLE_ADC_PATH=~/.config/gcloud/application_default_credentials.json
